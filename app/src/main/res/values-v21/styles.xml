    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNet</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNet</item>
        <item name="colorAccent">@color/colorAccentNet</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6c6c70</item>
        <item name="android:typeface">monospace</item>

        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RecyclerView">
        <item name="android:background">@color/colorBackgroundRecyclerView</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>>
    </style>

    <style name="MyCardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundCardView</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="MyCardViewTop">
        <item name="cardBackgroundColor">@color/colorBackgroundTabLayout</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="MyTabLayout">
        <item name="android:background">@color/colorBackgroundTabLayout</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>>
    </style>

    <style name="MyConstrateLayout">
        <item name="android:background">@color/colorBackgroundConstrateLayout</item>

    </style>
</resources>
